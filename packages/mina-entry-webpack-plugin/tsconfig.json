{
  "compilerOptions": {
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
